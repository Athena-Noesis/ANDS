{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/chain-of-work.schema.json",
  "title": "Chain of Work",
  "type": "object",
  "required": [
    "chain_id",
    "created_at",
    "nodes",
    "edges"
  ],
  "properties": {
    "chain_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string"
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "node_id",
          "step_type",
          "timestamp"
        ],
        "properties": {
          "node_id": {
            "type": "string"
          },
          "step_type": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          },
          "snapshot_id": {
            "type": "string"
          },
          "inputs_hash": {
            "type": "string"
          },
          "outputs_hash": {
            "type": "string"
          },
          "source_system": {
            "type": "object",
            "properties": {
              "system_id": {
                "type": "string"
              },
              "ands_code": {
                "type": "string"
              },
              "certification_level": {
                "type": "string"
              }
            }
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "from",
          "to",
          "relation"
        ],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "relation": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}