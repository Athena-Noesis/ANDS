{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/well-known-ands-1.1.schema.json",
  "title": "ANDS Well-Known Declaration (v1.2)",
  "type": "object",
  "required": [
    "system_id",
    "ands_version",
    "declared_ands",
    "certification_level"
  ],
  "properties": {
    "system_id": {
      "type": "string",
      "minLength": 3,
      "description": "Stable identifier for the AI system"
    },
    "ands_version": {
      "type": "string",
      "description": "ANDS standard version, e.g., 1.1"
    },
    "declared_ands": {
      "$ref": "./ands.schema.json"
    },
    "environment": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Optional Environment axis (E) - Sustainability/Impact"
    },
    "certification_level": {
      "type": "string",
      "enum": [
        "SELF",
        "VERIFIED",
        "AUDITED"
      ]
    },
    "scope": {
      "type": "array",
      "items": { "type": "string" }
    },
    "attestation_urls": {
      "type": "array",
      "items": { "type": "string", "format": "uri" }
    },
    "sbom_urls": {
      "type": "array",
      "items": { "type": "string", "format": "uri" }
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tool_use": { "type": "boolean" },
        "memory_persistence": { "type": "boolean" },
        "autonomous_execution": { "type": "boolean" },
        "state_mutation": { "type": "boolean" },
        "code_execution": { "type": "boolean" }
      }
    },
    "contact": { "type": "string" },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "signer", "sig", "alg", "pubkey"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["vendor", "auditor", "legal", "regulator"]
          },
          "signer": { "type": "string" },
          "sig": { "type": "string" },
          "alg": { "type": "string" },
          "pubkey": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        },
        "additionalProperties": true
      }
    },
    "auditor_confirmation": {
      "type": "object",
      "properties": {
        "auditor_id": { "type": "string" },
        "confirmed_at": { "type": "string", "format": "date-time" },
        "notes": { "type": "string" },
        "override_ands": { "$ref": "./ands.schema.json" }
      }
    }
  },
  "additionalProperties": true
}